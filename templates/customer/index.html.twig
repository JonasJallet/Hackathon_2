{% extends 'base.html.twig' %}

{% block title %}Customer index
{% endblock %}

{% block body %}
	<h3>Customer index</h3>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>FirstName</th>
				<th>LastName</th>
				<th>DisabilityCard</th>
				<th>Phone</th>
				<th>Address</th>
				<th>Zipcode</th>
				<th>City</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for customer in customers %}
				<tr>
					<td>{{ customer.id }}</td>
					<td>{{ customer.firstName }}</td>
					<td>{{ customer.lastName }}</td>
					<td>{{ customer.disabilityCard }}</td>
					<td>{{ customer.phone }}</td>
					<td>{{ customer.address }}</td>
					<td>{{ customer.zipcode }}</td>
					<td>{{ customer.city }}</td>
					<td>
						<a href="{{ path('app_customer_show', {'id': customer.id}) }}"><img class="" src="{{ asset('build/images/show.png') }}" alt="" width="35" heigh="35"></a>
						{% if is_granted('ROLE_ADMIN') %}
							<a href="{{ path('app_customer_edit', {'id': customer.id}) }}"><img class="" src="{{ asset('build/images/edit.png') }}" alt="" width="35" heigh="35"></a>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_customer_new') }}">Create new</a>
{% endblock %}
