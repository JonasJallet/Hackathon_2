{% extends 'base.html.twig' %}

{% block title %}Vehicle
{% endblock %}

{% block body %}
	<h1>Vehicle</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ vehicle.id }}</td>
			</tr>
			<tr>
				<th>Brand</th>
				<td>{{ vehicle.brand }}</td>
			</tr>
			<tr>
				<th>Model</th>
				<td>{{ vehicle.model }}</td>
			</tr>
			<tr>
				<th>Mileage</th>
				<td>{{ vehicle.mileage }}</td>
			</tr>
			<tr>
				<th>Energy</th>
				<td>{{ vehicle.energy }}</td>
			</tr>
			<tr>
				<th>RegistrationPlate</th>
				<td>{{ vehicle.registrationPlate }}</td>
			</tr>
			<tr>
				<th>IsAvailable</th>
				<td>{{ vehicle.isAvailable ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Picture</th>
				<td>{{ vehicle.picture }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_vehicle_index') }}">back to list</a>

	<a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}">edit</a>

	{{ include('vehicle/_delete_form.html.twig') }}
{% endblock %}
